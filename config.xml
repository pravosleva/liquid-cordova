<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.liquid" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Liquid</name>
    <description>
        Application that calculates characteristics for different liquids, such as water, ethylene- and propylene-glycole, depending on temperature and composition.
    </description>
    <author email="selection4test@gmail.com" href="http://selection4test.ru">
        Den Pol
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
